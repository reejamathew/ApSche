<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_margin="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aptno"
                        android:textSize="24sp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Aptno"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:lines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tenant Name"
                        android:textSize="24sp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tenant_name"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:lines="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone No"
                        android:textSize="24sp" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_no"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:lines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lease Period"
                        android:textSize="24sp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lease_period"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:lines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lease Information"
                        android:textSize="24sp" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lease_infor"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:lines="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lease Amount"
                        android:textSize="24sp" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lease_amount"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:lines="1" />
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/leaseCurrencyContainer"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="24dp"
                    android:hint="@string/lease_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phoneNumberContainer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/leaseCurrencyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/lease_currency"
                        android:inputType="numberDecimal"
                        android:lines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Beds"
                        android:textSize="24sp" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/beds"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:lines="1" />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:backgroundTint="@color/theme_color"
                android:text="@string/edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>